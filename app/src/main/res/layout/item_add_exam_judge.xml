<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
    app:cardCornerRadius="5dp"

    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:padding="10dp"
            >


            <TextView
                android:id="@+id/tv_add_exam_judge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1:判断题"
                android:textSize="14sp"/>

            <EditText
                android:inputType="number"
                android:id="@+id/et_add_exam_grade"
                android:layout_width="28dp"
                android:layout_height="18dp"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@id/tv_add_exam_judge"
                android:background="@drawable/bg_item_exam"
                android:gravity="center"
                android:maxLength="2"
                android:textSize="14sp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="4dp"
                android:layout_toRightOf="@id/et_add_exam_grade"
                android:text="分"
                android:textSize="14sp"/>

            <EditText
                android:paddingLeft="5dp"
                android:id="@+id/et_add_exam_title"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_alignParentRight="true"
                android:layout_below="@id/et_add_exam_grade"
                android:layout_marginTop="8dp"
                android:background="@drawable/bg_item_exam"
                android:gravity="top"
                android:hint="题目"
                android:textSize="14sp"/>

            <Button
                android:id="@+id/btn_add_exam_true"
                android:layout_width="100dp"
                android:layout_height="30dp"
                android:layout_below="@id/et_add_exam_title"
                android:layout_marginTop="6dp"
                android:background="@drawable/bg_select_item"
                android:elevation="0dp"
                android:text="对"/>

            <Button
                android:id="@+id/btn_add_exam_false"
                android:layout_width="100dp"
                android:layout_height="30dp"
                android:layout_below="@id/btn_add_exam_true"
                android:layout_marginTop="6dp"
                android:background="@drawable/bg_select_item"
                android:elevation="0dp"
                android:text="错"/>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp">

            <Button
                android:layout_alignParentRight="true"
                android:background="@drawable/bg_item_exam"
                android:id="@+id/btn_add_exam_cancle"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:text="取消"/>
        </RelativeLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>